<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/bg_tab_selected" android:state_selected="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white_s6" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/bg_tab_unselected" android:state_selected="false" android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_s6"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>
</selector>