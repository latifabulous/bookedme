<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".order.InProgressFragment">

<androidx.cardview.widget.CardView
    android:id="@+id/cardview_progress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"

        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="72dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/img_book_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/jw"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:text="Latifabulous"
                    android:textSize="14sp"
                    android:textColor="@color/brown_5"
                    android:fontFamily="@font/playfair_display_bold"/>
                <TextView
                    android:id="@+id/tv_book_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dikemas"
                    android:textSize="10sp"
                    android:textColor="#FF8E57"
                    android:layout_weight=".1"
                    android:fontFamily="@font/poppins_semibold"
                    android:background="@drawable/bg_dikemas"
                    android:padding="2dp"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_book_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textSize="10sp"
                android:gravity="right"
                android:textColor="@color/grey_s1"
                android:fontFamily="@font/poppins_semibold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tv_book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:text="Rp.5000"
                    android:textSize="12sp"
                    android:textColor="@color/green_1"
                    android:fontFamily="@font/poppins_semibold"/>
                <TextView
                    android:id="@+id/tv_user_total_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21-07-2021 09.30"
                    android:textSize="10sp"
                    android:textColor="@color/grey_s1"
                    android:fontFamily="@font/poppins_semibold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/grey_s2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".9"
            android:text="Total Pay"
            android:textSize="12sp"
            android:textColor="@color/black_s5"
            android:fontFamily="@font/poppins_semibold"/>
        <TextView
            android:id="@+id/tv_book_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 17.000"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/green_1"
            android:fontFamily="@font/poppins_semibold"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>

</ScrollView>