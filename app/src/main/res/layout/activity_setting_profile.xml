<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f6f6"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onClick"
                android:background="@drawable/btn_back_brown2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:layout_weight="1"
                android:alpha=".8"
                android:text="@string/profile"
                android:textColor="@color/black_s5"
                android:textSize="18sp" />
            <Button
                android:id="@+id/btn_bookmark"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_menu_brown2"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user_pp"
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/jw"
                app:civ_border_color="@color/white_s6"
                app:civ_border_width="3dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.12" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_camera"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.614"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/grey_s1"
            android:fontFamily="@font/poppins_semibold"/>

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:alpha=".8"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14dp"
            android:text="Nur Izza Latifah"
            android:textColor="@color/black_s5"
            android:inputType="text"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/grey_s1"
            android:fontFamily="@font/poppins_semibold"/>

        <EditText
            android:id="@+id/et_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:alpha=".8"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14dp"
            android:text="bae.latifa@gmail.com"
            android:textColor="@color/black_s5"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/grey_s1"
            android:fontFamily="@font/poppins_semibold"/>

        <EditText
            android:id="@+id/et_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:alpha=".8"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14dp"
            android:text="087704620821"
            android:textColor="@color/black_s5"
            android:inputType="phone"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/grey_s1"
            android:fontFamily="@font/poppins_semibold"/>

        <EditText
            android:id="@+id/et_user_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:alpha=".8"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14dp"
            android:text="Latifabulous"
            android:textColor="@color/black_s5"
            android:inputType="text"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/grey_s1"
            android:fontFamily="@font/poppins_semibold"/>

        <EditText
            android:id="@+id/et_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:alpha=".8"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14dp"
            android:text="@string/alamat"
            android:textColor="@color/black_s5"
            android:inputType="text"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/grey_s1"
            android:fontFamily="@font/poppins_semibold"/>

        <RadioGroup
            android:id="@+id/rb_user_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_user_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:alpha=".8"
                android:layout_weight=".5"
                android:background="@drawable/bg_input"
                android:padding="16dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black_s5"/>

            <RadioButton
                android:id="@+id/rb_user_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:alpha=".8"

                android:layout_weight=".5"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_input"
                android:padding="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black_s5"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="12sp"

            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/grey_s1"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/tv_user_dof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:alpha=".8"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14dp"
            android:textColor="@color/black_s5"
            android:inputType="text"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:fontFamily="@font/poppins_semibold"
            android:height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="24dp"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:textColor="@color/white_s6"
            android:textSize="16dp"
            android:background="@drawable/btn_gradient"
            />
    </LinearLayout>

</ScrollView>