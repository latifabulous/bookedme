<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:padding="20dp"
    android:elevation="4dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:behavior_hideable="true"
    android:background="@drawable/bg_white_swipe"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/gesture_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/bottom_sheet_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_swipe"/>

        <LinearLayout
            android:id="@+id/harga_bayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/total_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Rp. 70.000"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/green_1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_checkout_swipe"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_gradient"
                android:fontFamily="@font/poppins_bold"
                android:text="Checkout"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="@color/white_s6" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Subtotal"
            android:textColor="@color/grey_s1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/sub_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="right"
            android:text="Rp. 68.000"
            android:textColor="@color/grey_s1"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Admin Fee"
            android:textColor="@color/grey_s1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sub_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="right"
            android:text="Rp. 2.000"
            android:textColor="@color/grey_s1"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/total_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Total"
            android:alpha=".8"
            android:textColor="@color/black_s5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="right"
            android:text="Rp. 70.000"
            android:textColor="@color/green_1"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_bold"
        android:textAllCaps="false"
        android:background="@drawable/btn_gradient"
        android:textColor="@color/white_s6"
        android:layout_marginTop="10dp"/>

</LinearLayout>